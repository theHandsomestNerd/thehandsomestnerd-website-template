{
  "compilerOptions": {
  "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]  // <-- here
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"],
  "files": ["src/global.d.ts",]
}