{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build/esm",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "typeRoots": ["node_modules/@types"]  // <-- here
  },
  "include": [
    "src",
//    "dist"
//    "src/**/*.ts",
//    "src/**/*.tsx",
//    "src/**/*.js",
//    "node_modules/@types/**/*"
  ],
  "exclude": ["node_modules/**/*", "dist", "src/stories", "build"],
  "files": ["src/global.d.ts","src/common/sanityIo/Types.ts", "@types/block-content-to-react.d.ts"
  ],

}